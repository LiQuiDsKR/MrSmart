<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4FF"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tool_background"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/searchSheetEdit"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/sheetSearchBtn"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_fix_ic_top_search_copy" />

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Manager_Return_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                tools:listitem="@layout/fragment_outstanding_rentalsheet" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#F4F4FF"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/QRcodeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/edittext_rounded_bg"
                    android:backgroundTint="#FEA039"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="10dp"
                        app:srcCompat="@drawable/scan" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="QR 코드"
                        android:textColor="#FFFFFF" />


                </LinearLayout>

                <EditText
                    android:id="@+id/QREditText"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="#00FFFFFF"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:textColor="#00000000"
                    android:textSize="0sp" />

                <ImageButton
                    android:id="@+id/Manager_SelfRentalBtn"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:layout_weight="0"
                    android:backgroundTint="#00FFFFFF"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/group_8" />

            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>