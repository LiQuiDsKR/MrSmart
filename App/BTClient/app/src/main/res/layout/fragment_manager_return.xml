<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4FF"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#32345e"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0"
                android:background="#00FFFFFF"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/manager_lobby_topview_arguments" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/WelcomeMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:fontFamily="@font/noto_sans"
                android:paddingRight="20dp"
                android:text="님 환영합니다."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/tool_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="35dp"
                android:paddingTop="5dp"
                android:paddingRight="35dp"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="clip_horizontal|right"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/searchSheetEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:inputType="text"
                        android:singleLine="true"
                        android:text="" />

                    <ImageButton
                        android:id="@+id/sheetSearchBtn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#00FFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_fix_ic_top_search_copy" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Manager_Return_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:listitem="@layout/fragment_outstanding_rentalsheet" />

        <EditText
            android:id="@+id/QREditText"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:backgroundTint="#00FFFFFF"
            android:clickable="false"
            android:inputType="textMultiLine"
            android:textColor="#00FFFFFF"
            android:textSize="0sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/SelfRentalBtnField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/SelfRentalBtn"
                    android:layout_width="54dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_menu_off_01" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="대여 신청"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RentalBtnField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/RentalBtn"
                    android:layout_width="54dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_menu_off_01" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="대여 승인"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ReturnBtnField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/ReturnBtn"
                    android:layout_width="54dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_menu_on_02" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="반납 승인"
                    android:textColor="#32345E"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/StandbyBtnField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/StandbyBtn"
                    android:layout_width="54dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_menu_off_03" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="보류"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RegisterBtnField"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/RegisterBtn"
                    android:layout_width="54dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#00FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_menu_off_04" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="등록"
                    android:textColor="#BDBDBD"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>